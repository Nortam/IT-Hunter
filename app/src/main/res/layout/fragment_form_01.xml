    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:scaleType="center"
            app:materialIcon="account"
            app:materialIconColor="@color/colorLightBaseText"
            app:materialIconSize="24dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:hint="Name"
            android:maxLines="2"
            android:textColor="@color/colorLightBaseText"
            android:textSize="@dimen/text_size"
            app:met_floatingLabel="normal"
            app:met_iconPadding="0dp"
            app:met_singleLineEllipsis="true" />
    </LinearLayout>

